<!DOCTYPE html>
<html>
<head>
  <title>Flashcards</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      <%= link_to 'Пройти тест', root_path, class: 'navbar-brand' %>
    </div>
    <div id="navbar">
      <ul class="nav navbar-nav">
        <% if current_user %>
          <li><%= link_to 'Все карточки', secret_path %></li>
        <% else %>
          <li><%= link_to 'Регистрация', sign_up_path %></li>
          <li><%= link_to 'Вход', log_in_path %></li>
        <% end %>
      </ul>
      <% if current_user %>
        <ul class="nav navbar-nav pull-right">
          <li><span><%= current_user.name %></span></li>
          <li><%= link_to 'Выход', log_out_path, method: :delete %></li>
          <li><%= link_to 'Редактировать профиль', edit_profile_path(current_user) %></li>
        </ul>
      <% end %>
    </div>
  </div>
</nav>

<div class="container">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>">
      <%= value %>
    </div>
  <% end %>

  <div class="col-sm-9">
    <%= yield %>
  </div>
</div>
</body>
</html>
